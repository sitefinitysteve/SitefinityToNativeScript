<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo">
  <StackLayout>
    <Label text="{{ Title }}" cssClass="title"/>
    <TextView text="{{ Description }}" cssClass="description" textWrap="true"/>
    <StackLayout orientation="horizontal">
        <Label text="Complete" cssClass="label" />
        <Switch checked="{{ Complete }}" cssClass="info" />
    </StackLayout>
    <Button text="Save" tap="saveTask" cssClass="saveTask"/>
  </StackLayout>
</Page>